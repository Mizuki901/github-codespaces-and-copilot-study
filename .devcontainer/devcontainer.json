{
    "image": "mcr.microsoft.com/devcontainers/javascript-node:dev-20",
    "hostRequirements": {
        "cpus": 2
    },
    "customizations": {
        "codespaces": {
            "openFiles": [
                "index.html"
            ]
        }
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "npm install",
    "postCreateCommand": "",
    "postAttachCommand": {
        "server": "npm run serve"
    },
    "portsAttributes": {
        "3000": {
            "label": "Application",
            "onAutoForward": "openPreview"
        }
    },
    "forwardPorts": [
        3000
    ]
}